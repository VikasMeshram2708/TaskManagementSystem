generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id        String   @id @default(uuid()) @map("_id")
  firstname String
  lastname  String
  email     String   @unique // Unique email address
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  task      task[]
}

model task {
  id          String     @id @default(uuid()) @map("_id")
  title       String
  description String
  status      TaskStatus @default(Todo) // Enum type with a default value
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        user?      @relation(fields: [userId], references: [id])
  userId      String?
}

enum TaskStatus {
  Todo
  InProgress
  Done
}
